image: "python:{{ python_version }}"

stages:
  - .pre
  - test
  - linting

before_script:
  - apt-get update && apt-get install -y make
  - pip install poetry
  - make setup-strict

test:
  stage: test
  script:
    {% if testing_framework == "pytest" %}
    - poetry run pytest
    {% endif %}
    {% if testing_framework == "unittest" %}
    - poetry run python -m unittest discover
    {% endif %}

pre-commit:
  stage: linting
  script:
    - poetry run pre-commit run --all-files
