{
  {% if use_jupyter_notebooks %}
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  {% endif %}
  "json.format.keepLines": true,
  "autoDocstring.docstringFormat": "google-notypes",

  // üìù Save Actions: Fix all issues & organize imports
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },

  // üìù Language-Specific Settings
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",  // Use Ruff as the Python formatter
    "editor.formatOnSave": true,                      // Format Python files on save
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,                 // Ruff organizes imports
      "source.fixAll": true                           // Auto-fix issues on save
    }
  }
}
